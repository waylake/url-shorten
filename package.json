    "publish-packages": "turbo run build lint && changeset version && changeset publish"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.1.0",
  "dependencies": {
    "@changesets/cli": "^2.25.2",
    "dotenv-cli": "^6.0.0"
  }
}
